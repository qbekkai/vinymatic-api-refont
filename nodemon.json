{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "watch": [
    "server.ts",
    "src/",
    "@types/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts"
}